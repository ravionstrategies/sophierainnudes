---
import HomeButton from '../components/HomeButton.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
	description: string;
	keywords: string;
	canonical: string;
	ogImage?: string;
}

const { title, description, keywords, canonical, ogImage = '/images/sophie-rain-social.svg' } = Astro.props;

// Critical CSS for above-the-fold content
const criticalCSS = `
  :root {
    --primary-color: #ff69b4;
    --text-color: #333;
    --background-color: #fff;
    color-scheme: light;
  }
  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    background: var(--background-color);
    color: var(--text-color);
  }
  .container {
    max-width: min(100vw - 2rem, 1200px);
    margin: 0 auto;
    padding: 0 1rem;
  }
  h1 {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    line-height: 1.2;
    margin: 1rem 0;
  }
  img {
    max-width: 100%;
    height: auto;
  }
  .lazy-image {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  .lazy-image.loaded {
    opacity: 1;
  }
`;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
		<meta name="format-detection" content="telephone=no">
		<meta name="theme-color" content="#ff0000">
		
		<!-- SEO Meta Tags -->
		<title>Sophie Rain Content 2025 - Official Updates & Information</title>
		<meta name="description" content="Latest Sophie Rain content updates [February 2025]. Get accurate information about Sophie Rain, avoid scams, and learn about content authenticity. Updated daily with verified facts." />
		<meta name="title" content="Sophie Rain Content 2025 - Official Updates & Information" />
		<meta name="keywords" content="sophie rain content, sophie rain updates 2025, sophie rain information, sophie rain official, sophie rain facts, sophie rain verification, sophie rain updates" />
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="1 day" />
		<meta name="author" content="Sophie Rain" />
		<link rel="canonical" href={canonical} />

		<!-- Preload critical assets -->
		<link rel="preload" href={ogImage} as="image" fetchpriority="high" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Analytics -->
		<script async defer src="https://www.googletagmanager.com/gtag/js?id=G-J0LHEBVP2S"></script>
		<script is:inline defer>
			// @ts-ignore
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				window.dataLayer.push(arguments);
			}
			gtag('js', new Date());
			gtag('config', 'G-J0LHEBVP2S', {
				page_path: window.location.pathname,
				debug_mode: false,
				transport_type: 'beacon',
				send_page_view: true
			});
		</script>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content="Sophie Rain Content 2025 - Official Updates & Information" />
		<meta property="og:description" content="Latest Sophie Rain content updates [February 2025]. Get accurate information about Sophie Rain, avoid scams, and learn about content authenticity. Updated daily with verified facts." />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="en_US" />
		<meta property="og:site_name" content="Sophie Rain Official" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonical} />
		<meta name="twitter:title" content="Sophie Rain Content 2025 - Official Updates & Information" />
		<meta name="twitter:description" content="Latest Sophie Rain content updates [February 2025]. Get accurate information about Sophie Rain, avoid scams, and learn about content authenticity. Updated daily with verified facts." />
		<meta name="twitter:image" content={ogImage} />
		<meta name="twitter:creator" content="@sophierain" />

		<!-- Compression & Cache Headers -->
		<meta http-equiv="Cache-Control" content="max-age=31536000, immutable" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Schema.org markup -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Article",
			"headline": "Sophie Rain Content 2025 - Official Updates & Information",
			"description": "Latest Sophie Rain content updates and information. Verified facts and official details about Sophie Rain, updated February 2025.",
			"articleSection": "Celebrity Information",
			"articleBody": "Comprehensive guide about Sophie Rain, including factual information, updates, and verification resources. Learn how to identify authentic content and avoid common internet scams.",
			"keywords": [
				"sophie rain content",
				"sophie rain updates 2025",
				"sophie rain information",
				"sophie rain official",
				"sophie rain facts",
				"sophie rain verification",
				"sophie rain updates"
			],
			"image": ogImage,
			"datePublished": "2025-02-19",
			"dateModified": "2025-02-22",
			"author": {
				"@type": "Person",
				"name": "Sophie Rain",
				"url": "https://sophierainnudes.com/who-is-sophie-rain/"
			},
			"publisher": {
				"@type": "Organization",
				"name": "Sophie Rain Official",
				"logo": {
					"@type": "ImageObject",
					"url": "/images/logo.svg"
				},
				"url": "https://sophierainnudes.com"
			},
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": canonical
			}
		})} />
		
		<!-- Additional SEO Optimization -->
		<link rel="alternate" hreflang="en" href={canonical} />
		<meta name="geo.region" content="US" />
		<meta name="geo.position" content="39.8282;-98.5795" />
		<meta name="ICBM" content="39.8282, -98.5795" />
		<meta name="rating" content="mature" />
		<meta name="referrer" content="no-referrer-when-downgrade" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />

		<!-- Critical CSS -->
		<style is:inline>
			@media not all and (min-width: 0px) {
				:root * {display: none;}
			}
			:root {
				--primary-color: #ff69b4;
				--text-color: #333;
				--background-color: #fff;
				color-scheme: light;
			}
			body {
				margin: 0;
				font-family: -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
				background: var(--background-color);
				color: var(--text-color);
			}
			.container {
				width: 100%;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
				box-sizing: border-box;
			}
			@media (max-width: 768px) {
				.container {
					padding: 0 0.5rem;
				}
			}
			h1 {
				font-size: clamp(1.8rem, 4vw, 2.5rem);
				line-height: 1.2;
				margin: 1rem 0;
			}
			img {
				max-width: 100%;
				height: auto;
				display: block;
			}
			.breaking-news {
				background: #1a0000;
				color: white;
				padding: 1.25rem;
				border-radius: 12px;
				margin: 1.5rem auto;
				border: 2px solid #FF0000;
				max-width: 800px;
			}
			.telegram-link {
				display: block;
				background: #FF0000;
				color: white;
				text-decoration: none;
				padding: 1rem;
				border-radius: 8px;
				margin: 0.75rem auto;
				text-align: center;
				font-weight: 900;
				font-size: 1.2rem;
				text-transform: uppercase;
				max-width: 600px;
			}
		</style>
		
		<!-- Non-critical CSS -->
		<link rel="preload" href="/styles/main.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
		<noscript><link rel="stylesheet" href="/styles/main.css" /></noscript>

		<!-- Optimized script loading -->
		<script type="module" src="/scripts/main.js" async></script>

		<!-- DNS Prefetch -->
		<link rel="dns-prefetch" href="https://www.googletagmanager.com">
		
		<!-- Resource Hints -->
		<link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
	</head>
	<body>
		<!-- Page Content -->
		<HomeButton />
		<main class="container">
			<slot />
		</main>
		<Footer />
		
		<!-- Deferred JavaScript -->
		<script type="module" src="/scripts/main.js" defer></script>
	</body>
</html>
