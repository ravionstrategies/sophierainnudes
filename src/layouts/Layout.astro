---
import HomeButton from '../components/HomeButton.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
	description: string;
	keywords: string;
	canonical: string;
	ogImage?: string;
}

const { title, description, keywords, canonical, ogImage = '/images/sophie-rain-social.svg' } = Astro.props;

// Critical CSS for above-the-fold content
const criticalCSS = `
  :root {
    --primary-color: #ff69b4;
    --text-color: #333;
    --background-color: #fff;
    color-scheme: light;
  }
  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    background: var(--background-color);
    color: var(--text-color);
  }
  .container {
    max-width: min(100vw - 2rem, 1200px);
    margin: 0 auto;
    padding: 0 1rem;
  }
  h1 {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    line-height: 1.2;
    margin: 1rem 0;
  }
  img {
    max-width: 100%;
    height: auto;
  }
  .lazy-image {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  .lazy-image.loaded {
    opacity: 1;
  }
`;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
		<meta name="format-detection" content="telephone=no">
		<meta name="theme-color" content="#ff0000">
		
		<!-- JuicyAds Verification -->
		<meta name="juicyads-site-verification" content="c52ce8462cd253756cdfcc8d633d72ca">

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content="Exclusive Sophie Rain content and latest updates. Get access to private photos, leaked content, and daily updates. Join our VIP Telegram channel now! ðŸ”¥">
		<meta name="title" content={title} />
		<meta name="keywords" content={keywords} />
		<meta name="robots" content="index, follow, max-image-preview:large" />
		<meta name="language" content="English" />
		<meta name="revisit-after" content="1 day" />
		<meta name="author" content="Sophie Rain" />
		<link rel="canonical" href={canonical} />

		<!-- Preload critical assets -->
		<link rel="preload" href={ogImage} as="image" fetchpriority="high" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-J0LHEBVP2S"></script>
		<script is:inline>
			// @ts-ignore
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				window.dataLayer.push(arguments);
			}
			gtag('js', new Date());
			gtag('config', 'G-J0LHEBVP2S', {
				page_path: window.location.pathname,
				debug_mode: false,
				transport_type: 'beacon',
				send_page_view: true
			});
		</script>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Exclusive Sophie Rain content and latest updates. Get access to private photos, leaked content, and daily updates. Join our VIP Telegram channel now! ðŸ”¥" />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="en_US" />
		<meta property="og:site_name" content="Sophie Rain Official" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonical} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Exclusive Sophie Rain content and latest updates. Get access to private photos, leaked content, and daily updates. Join our VIP Telegram channel now! ðŸ”¥" />
		<meta name="twitter:image" content={ogImage} />
		<meta name="twitter:creator" content="@sophierain" />

		<!-- Compression & Cache Headers -->
		<meta http-equiv="Cache-Control" content="max-age=31536000, immutable" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Schema.org markup -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Article",
			"headline": title,
			"description": "Exclusive Sophie Rain content and latest updates. Get access to private photos, leaked content, and daily updates. Join our VIP Telegram channel now! ðŸ”¥",
			"image": ogImage,
			"datePublished": "2025-02-19",
			"dateModified": "2025-02-19",
			"author": {
				"@type": "Person",
				"name": "Sophie Rain",
				"url": "https://sophierainnudes.com/who-is-sophie-rain/"
			},
			"publisher": {
				"@type": "Organization",
				"name": "Sophie Rain Official",
				"logo": {
					"@type": "ImageObject",
					"url": "/images/logo.svg"
				},
				"url": "https://sophierainnudes.com"
			},
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": canonical
			},
			"keywords": keywords.split(",").map(k => k.trim())
		})} />
		
		<!-- Critical CSS -->
		<style is:inline>
			:root {
				--primary-color: #ff69b4;
				--text-color: #333;
				--background-color: #fff;
				color-scheme: light;
			}
			body {
				margin: 0;
				font-family: -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
				background: var(--background-color);
				color: var(--text-color);
			}
			.container {
				width: 100%;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
				box-sizing: border-box;
			}
			@media (max-width: 768px) {
				.container {
					padding: 0 0.5rem;
				}
			}
			h1 {
				font-size: clamp(1.8rem, 4vw, 2.5rem);
				line-height: 1.2;
				margin: 1rem 0;
			}
			img {
				max-width: 100%;
				height: auto;
				display: block;
			}
			.breaking-news {
				background: #1a0000;
				color: white;
				padding: 1.25rem;
				border-radius: 12px;
				margin: 1.5rem auto;
				border: 2px solid #FF0000;
				max-width: 800px;
			}
			.telegram-link {
				display: block;
				background: #FF0000;
				color: white;
				text-decoration: none;
				padding: 1rem;
				border-radius: 8px;
				margin: 0.75rem auto;
				text-align: center;
				font-weight: 900;
				font-size: 1.2rem;
				text-transform: uppercase;
				max-width: 600px;
			}
		</style>
		
		<!-- Non-critical CSS -->
		<link rel="stylesheet" href="/styles/main.css" media="print" onload="this.media='all'" />
		<noscript><link rel="stylesheet" href="/styles/main.css" /></noscript>

		<!-- Lazy Loading Script -->
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const lazyImages = document.querySelectorAll('img[loading="lazy"]');
				const imageObserver = new IntersectionObserver((entries, observer) => {
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							const img = entry.target as HTMLImageElement;
							if (img.dataset.src) {
								img.src = img.dataset.src;
							}
							img.classList.add('loaded');
							observer.unobserve(img);
						}
					});
				});

				lazyImages.forEach(img => {
					imageObserver.observe(img);
				});
			});
		</script>
	</head>
	<body>
		<script type="text/javascript">
			var juicy_tags = ['a', 'img'];
			var juicy_options = {
				'force_pop': true,
				'force_click': true,
				'force_mobile': true
			};
		</script>
		<script type="text/javascript" src="https://js.juicyads.com/jp.php?c=445413w2t254u4r2o2b4x264a4&u=http%3A%2F%2Fwww.juicyads.rocks"></script>

		<HomeButton />
		<main class="container">
			<slot />
		</main>
		<Footer />
		
		<!-- Deferred JavaScript -->
		<script type="module" src="/scripts/main.js" defer></script>
	</body>
</html>

