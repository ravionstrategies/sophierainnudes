---
interface Props {
  links: {
    url: string;
    title: string;
    description: string;
    ariaLabel: string;
  }[];
}

const { links } = Astro.props;
---

<div class="learn-more-section">
  <h3>üîç Learn More About AI Detection</h3>
  <ul>
    {links.map(link => (
      <li>
        <a href={link.url} class="content-link" aria-label={link.ariaLabel}>
          <span class="link-title">{link.title}</span>
          <span class="link-description">{link.description}</span>
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
  .learn-more-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background: rgba(255, 105, 180, 0.05);
    border-radius: 8px;
  }

  .learn-more-section h3 {
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .learn-more-section ul {
    list-style: none;
    padding: 0;
  }

  .learn-more-section li {
    margin: 0.75rem 0;
  }

  .learn-more-section .content-link {
    display: block;
    padding: 1rem;
    background: rgba(255, 105, 180, 0.1);
    border-radius: 8px;
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .learn-more-section .content-link:hover {
    background: rgba(255, 105, 180, 0.2);
    transform: translateY(-2px);
  }

  .learn-more-section .link-title {
    display: block;
    font-size: 1.1em;
    font-weight: bold;
    margin-bottom: 0.25rem;
  }

  .learn-more-section .link-description {
    display: block;
    font-size: 0.9em;
    color: #666;
  }

  @media (max-width: 768px) {
    .learn-more-section {
      margin: 1.5rem -0.75rem;
      border-radius: 0;
    }

    .learn-more-section .content-link {
      border-radius: 0;
    }
  }
</style> 