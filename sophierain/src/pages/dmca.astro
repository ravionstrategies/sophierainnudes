---
import Layout from '../layouts/Layout.astro';
import LegalPage from '../components/LegalPage.astro';

const pageTitle = "DMCA Notice - SophieRainNudes.com";
const pageDescription = "DMCA Notice and Takedown Policy for SophieRainNudes.com - Learn about our copyright compliance procedures.";
const pageKeywords = "DMCA notice, copyright, takedown policy, Sophie Rain DMCA";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  canonical="https://sophierainnudes.com/dmca/"
>
  <main>
    <LegalPage
      title="DMCA Notice & Takedown Policy"
      lastUpdated="February 2025"
    >
      <section class="introduction">
        <h2>DMCA Compliance</h2>
        <p>SophieRainNudes.com respects intellectual property rights and complies with the Digital Millennium Copyright Act (DMCA).</p>
      </section>

      <section class="filing">
        <h2>Filing a DMCA Notice</h2>
        <div class="notice-requirements">
          <h3>Your notice must include:</h3>
          <ul>
            <li>Physical or electronic signature</li>
            <li>Description of copyrighted work</li>
            <li>URL of infringing material</li>
            <li>Your contact information</li>
            <li>Statement of good faith belief</li>
            <li>Statement of accuracy under penalty of perjury</li>
          </ul>
        </div>
      </section>

      <section class="process">
        <h2>Takedown Process</h2>
        <div class="process-steps">
          <ol>
            <li>Submit complete DMCA notice</li>
            <li>We verify notice requirements</li>
            <li>Content is removed if valid</li>
            <li>Alleged infringer is notified</li>
            <li>Counter-notice opportunity provided</li>
          </ol>
        </div>
      </section>

      <section class="counter-notice">
        <h2>Counter-Notice Procedure</h2>
        <div class="counter-notice-box">
          <h3>Counter-notice must include:</h3>
          <ul>
            <li>Physical or electronic signature</li>
            <li>Identification of removed content</li>
            <li>Statement under penalty of perjury</li>
            <li>Consent to federal court jurisdiction</li>
          </ul>
        </div>
      </section>

      <section class="contact">
        <h2>Submit DMCA Notices</h2>
        <div class="contact-box">
          <p class="email-info">For DMCA takedown requests, please contact us at:</p>
          <p class="email">dmca@sophierainnudes.com</p>
          <div class="notice">
            <p>All removal requests will be processed within 24-72 hours.</p>
          </div>
        </div>
      </section>

      <section class="repeat-infringers">
        <h2>Repeat Infringer Policy</h2>
        <div class="policy-box">
          <p>We maintain a strict policy for repeat infringers:</p>
          <ul>
            <li>Account termination after multiple violations</li>
            <li>IP address blocking when necessary</li>
            <li>Permanent ban from our services</li>
          </ul>
        </div>
      </section>
    </LegalPage>
  </main>
</Layout>

<style>
  section {
    margin: 2.5rem 0;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: #333;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: #444;
  }

  .notice-requirements, .counter-notice-box, .contact-box, .policy-box {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .process-steps {
    background: #e3f2fd;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 1rem 0;
  }

  ol {
    list-style: decimal;
    margin-left: 1.5rem;
  }

  ul {
    list-style: disc;
    margin-left: 1.5rem;
  }

  li {
    margin: 0.8rem 0;
    line-height: 1.6;
  }

  a {
    color: #007bff;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .notice-requirements, .counter-notice-box, .contact-box, .policy-box, .process-steps {
      padding: 1rem;
    }
  }
</style> 